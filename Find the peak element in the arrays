#include <bits/stdc++.h>
using namespace std;
class solution{
  public:
  void f1(vector<int>arr){
      int ans=-1;
      if(arr[0]>arr[1])cout<<arr[0];
      if(arr[arr.size()-1]>arr[arr.size()-2])cout<<arr[arr.size()-1];
      for(int i=1;i<arr.size()-1;i++){
          if(arr[i]>=arr[i-1] && arr[i]>=arr[i+1])ans=arr[i];
      }
      cout<<ans;
  }
  void f2(vector<int>arr){
      int low=0,high=arr.size()-1,mid=0,ans=-1;
      while(low<=high){
          mid=low+(high-low)/2;
          if(mid-1>=0 && mid+1<=arr.size()-1 && arr[mid]>=arr[mid-1] && arr[mid]>=arr[mid+1]){
              ans=arr[mid];
              break;
          }else if(arr[mid]<arr[mid+1])low=mid+1;
          else if(arr[mid]<arr[mid-1])high=mid-1;
      }cout<<ans;
  }
};
int main() {
vector<int>arr={10, 20, 15, 2, 23, 90, 67};
solution s;
s.f1(arr);
s.f2(arr);


}
