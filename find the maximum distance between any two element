#include <bits/stdc++.h>
using namespace std;
class solution{
    public:
    void f1(vector<int>arr){
        int mx=INT_MIN;
        for(int i=0;i<arr.size();i++){
            for(int j=i+1;j<arr.size();j++){
                int diff=abs(arr[i]-arr[j]);
                mx=max(mx,diff);
            }
        }
        cout<<mx;
    }
    void f2(vector<int>arr){
        int mx=arr[arr.size()-1];
        int dis=-1;
        for(int i=arr.size()-2;i>=0;i--){
            if(arr[i]>mx)mx=arr[i];
            int diff=abs(mx-arr[i]);
            dis=max(dis,diff);
        }cout<<dis;
    }
    void f3(vector<int>arr){
        int mx=INT_MIN,mn=INT_MAX;
        int dis=-1;
        for(int val:arr){
            if(val>mx)mx=val;
            if(val<mn)mn=val;
        }
        dis=mx-mn;
        cout<<dis;
    }
}; 
int main() {
vector<int>arr={};
solution s;
s.f1(arr);
s.f2(arr);
s.f3(arr);
}
