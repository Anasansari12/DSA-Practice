#include <bits/stdc++.h>
using namespace std;
class solution{
  public:
  void f(vector<int>arr){
      vector<int>neg;
      vector<int>pos;
      for(int val:arr){
          if(val>=0)pos.push_back(val);
          else neg.push_back(val);
      }
      int n1=neg.size();
      int n2=pos.size();
      if(n1>n2){
          for(int i=0;i<n2;i++){
              arr[i*2]=pos[i];
              arr[i*2+1]=neg[i];
          }int index=n2*2;
          for(int i=n2;i<n1;i++){
              arr[index++]=neg[i];
          }
      }else{
          for(int i=0;i<n1;i++){
              arr[i*2]=pos[i];
              arr[i*2+1]=neg[i];
          }int index=n1*2;
          for(int i=n1;i<n2;i++){
              arr[index++]=pos[i];
          }
      }
      for(int val:arr)cout<<val;
  }
  void f2(vector<int>arr){
      vector<int>neg;
      vector<int>pos;
      for(int val:arr){
          if(val>=0)pos.push_back(val);
          else neg.push_back(val);
      }
      int n1=neg.size();
      int n2=pos.size();
      int i=0,j=0,k=0;
      while(i<n1 && j<n2){
          arr[k++]=pos[j++];
          arr[k++]=neg[i++];
      }
      while(i<n1)arr[k++]=neg[i++];
      while(j<n2)arr[k++]=neg[j++];
      for(int val:arr)cout<<val;
  }
  void f3(vector<int>arr){
      int i=-1;
      for(int j=0;j<arr.size();j++){
          if(arr[j]<0){
              i++;
              swap(arr[i],arr[j]);
          }
      }
      int neg=0,pos=i+1;
      while(pos<=arr.size()-1 && arr[neg]<0 && neg<pos){
          swap(arr[neg],arr[pos]);
          pos++;
          neg+=2;
      }
      for(int val:arr)cout<<val;
  }
 };
int main() {
vector<int>arr={-10,-20,-30,40,-50,60};
solution s;
s.f(arr);
cout<<endl;
s.f3(arr);
}
