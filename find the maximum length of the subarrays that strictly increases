#include <bits/stdc++.h>
using namespace std;
class soltuion{
  public:  
  void BUT(vector<int>arr){
      int mx=INT_MIN;
      for(int i=0;i<arr.size();i++){
          int len=1;
          for(int j=i+1;j<arr.size();j++){
              if(arr[j]>arr[j-1])len++;
              else break;
          }mx=max(mx,len);
      }
      cout<<mx;
  }
  void better(vector<int>arr){
      int mx=INT_MIN;
      int len=1;
      for(int i=0;i<arr.size();i++){
          if(i!=0 && arr[i]>arr[i-1])len++;
          else len=1;
          mx=max(mx,len);
      }cout<<mx;
  }
};
int main() {
vector<int> arr = {3, 2, 5, 6};
soltuion s;
s.BUT(arr);
s.better(arr);
}
