#include <bits/stdc++.h>
using namespace std;
class solution{
    public:
    void f1(vector<int>arr){
        int mn=INT_MAX;
        for(int i=0;i<arr.size();i++){
            for(int j=i+1;j<arr.size();j++){
               int diff=abs(arr[i]-arr[j]);
               mn=min(mn,diff);
            }
        }
        cout<<mn;
    }
    void f2(vector<int>arr){
        sort(arr.begin(),arr.end());
        int mn=INT_MAX;
        for(int i=1;i<arr.size();i++){
            int diff=abs(arr[i-1]-arr[i]);
             mn=min(mn,diff);
        }
        cout<<mn;
    }
}; 
int main() {
vector<int>arr={4, 8, 6, 1, 9};
solution s;
s.f1(arr);
s.f2(arr);
}
