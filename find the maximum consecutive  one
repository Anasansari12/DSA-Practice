#include <bits/stdc++.h>
using namespace std;
class solution{
  public:
  void f1(vector<int>arr){
      int i=0,j=0,mx=0;
      int countzer=0;
      while(i<arr.size()){
           if(arr[i]==0)countzer++;
           while(countzer>1){
               if(arr[j]==0)countzer--;
               j++;
           }
           mx=max(mx,i-j+1);
           i++;
      }
      cout<<mx;
  }
  void f2(vector<int>arr){
      int mx=0,count=0;
      for(int i=0;i<arr.size();i++){
          if(arr[i]==1){
              count++;
          }else count=0;
          mx=max(mx,count);
      }
      cout<<mx;
  }
};
int main() {
vector<int>arr={1, 0, 0, 1, 1, 1, 0, 1};
solution s;
s.f1(arr);
s.f2(arr);




}
