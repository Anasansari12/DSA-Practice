#include <bits/stdc++.h>
using namespace std;
class solution{
  public:
 void f(vector<int>&arr){
     int low=0,mid=0,high=arr.size()-1;
     for(int i=0;i<arr.size();i++){
         if(i%2==0){
             if(i+1<=arr.size()-1 && arr[i]>arr[i+1]){
                 swap(arr[i],arr[i+1]);
             }
         }else if(i%2!=0){
             if(i+1<=arr.size()-1 && arr[i]<arr[i+1]){
                 swap(arr[i],arr[i+1]);
             }
         }
     }
     for(int val:arr)cout<<val;
     
 }
};
int main() {
vector<int>arr={6,5,4,3,2,1};
solution s;
s.f(arr);
}
